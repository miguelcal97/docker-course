FROM centos

ARG user=application

ARG httpd_package=httpd

RUN yum -y install $httpd_package unzip

LABEL maintainer="Miguel"
LABEL vendor="company"

ENV HTML=beginner-html-site-styled

WORKDIR /var/www/html

# ADD https://github.com/mdn/beginner-html-site-styled/archive/gh-pages.zip /var/www/html/code.zip
ADD https://github.com/mdn/$HTML/archive/gh-pages.zip ./code.zip 

# RUN cd /var/www/html && unzip code.zip && mv /var/www/html/$HTML-gh-pages/* /var/www/html/ && echo $HTML > /var/www/html/env.html
RUN unzip code.zip && mv $HTML-gh-pages/* . && echo $HTML > ./env.html

RUN useradd $user && chown $user:$user /var/www/html -R

USER $user

RUN rm -rf code.zip $HTML-gh-pages/

USER root

COPY cmd.sh /cmd.sh

RUN chmod +x /cmd.sh

# CMD apachectl -DFOREGROUND
CMD /cmd.sh